{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "react-native"
  ],
  "env": {
    "jest": true
  },
  "extends": ["airbnb"],
  "rules": {
    "react/jsx-filename-extension": 0,
    "react/prefer-stateless-function": 1,
    "react-native/no-unused-styles": 2,
    "react-native/split-platform-components": 2,
    "react-native/no-inline-styles": 2,
    "react-native/no-color-literals": 2,
  }
}